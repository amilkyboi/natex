\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{natex}[2024/09/04 A collection of commands focused on consistent notation for engineering and physics applications.]

\RequirePackage{amssymb}   % needed for d'Alembertian operator
\RequirePackage{bm}        % needed for bold vectors
\RequirePackage{braket}    % needed for dirac notation
\RequirePackage{mathtools} % needed for operators and more
\RequirePackage{physics2}  % needed for automatic bracing

% physics2 imports
\usephysicsmodule{ab}

% automated bracing
\newcommand{\abs}[1]{\ab|#1|}                         % absolute value
\newcommand{\norm}[1]{\ab\|#1\|}                      % norm
\newcommand{\eval}[3]{\left.#1\right\rvert_{#2}^{#3}} % evaluation limits
\newcommand{\order}[1]{\mathcal{O}\ab(#1)}            % order of magnitude
\newcommand{\comm}[2]{\ab[#1, #2]}                    % commutator
\newcommand{\acomm}[2]{\ab\{#1, #2\}}                 % anticommutator
\newcommand{\pb}[2]{\ab\{#1, #2\}}                    % Poisson bracket

% vector notation
\newcommand{\vb}[1]{\bm{#1}}                % bold vector
\newcommand{\vu}[1]{\bm{\hat{#1}}}          % unit vector
\newcommand{\vdot}{\bm{\cdot}}              % dot product
\newcommand{\vcrs}{\bm{\times}}             % cross product
\newcommand{\grad}[1]{\bm{\nabla} #1}       % gradient
\newcommand{\divr}[1]{\bm{\nabla} \vdot #1} % divergence
\newcommand{\curl}[1]{\bm{\nabla} \vcrs #1} % curl
\newcommand{\slap}[1]{\nabla^2 #1}          % scalar Laplacian
\newcommand{\vlap}[1]{\bm{\nabla}^2 #1}     % vector Laplacian
\newcommand{\dalem}[1]{\Box #1}             % d'Alembertian
\newcommand{\del}{\bm{\nabla}}              % del

% dirac notation
\newcommand{\ev}[1]{\braket{#1}}      % expectation value
\newcommand{\ip}[2]{\braket{#1|#2}}   % inner product
\newcommand{\op}[2]{\ket{#1}\bra{#2}} % outer product

% matrices
\newcommand{\pmx}[1]{\begin{pmatrix} #1 \end{pmatrix}} % parenthetical matrix
\newcommand{\bmx}[1]{\begin{bmatrix} #1 \end{bmatrix}} % bracketed matrix
\newcommand{\vmx}[1]{\begin{vmatrix} #1 \end{vmatrix}} % vertical matrix
\newcommand{\cmx}[1]{\begin{Bmatrix} #1 \end{Bmatrix}} % curly matrix
\DeclareMathOperator{\tr}{tr}                          % trace
\newcommand{\tp}[1]{#1^\textsf{T}}                     % transpose
\newcommand{\cc}[1]{#1^*}                              % complex conjugate
\newcommand{\hc}[1]{#1^\dag}                           % Hermitian conjugate

% linear operators
\newcommand{\sop}[1]{\hat{#1}}      % scalar operator
\newcommand{\vop}[1]{\bm{\hat{#1}}} % vector operator

% probability
\DeclareMathOperator{\erf}{erf}   % error function
\DeclareMathOperator{\erfc}{erfc} % complementary error function

% trigonometric functions
\DeclareMathOperator{\asin}{asin}     % arcsine
\DeclareMathOperator{\acos}{acos}     % arccosine
\DeclareMathOperator{\atan}{atan}     % arctangent
\DeclareMathOperator{\asec}{asec}     % arcsecant
\DeclareMathOperator{\arcsec}{arcsec} % arcsecant
\DeclareMathOperator{\acsc}{acsc}     % arccosecant
\DeclareMathOperator{\arccsc}{arccsc} % arccosecant
\DeclareMathOperator{\acot}{acot}     % arccotangent
\DeclareMathOperator{\arccot}{arccot} % arccotangent
\DeclareMathOperator{\sech}{sech}     % hyperbolic secant
\DeclareMathOperator{\csch}{csch}     % hyperbolic cosecant

% other
\renewcommand{\Re}{\operatorname{Re}}   % real part
\renewcommand{\Im}{\operatorname{Im}}   % imaginary part
\newcommand{\defn}{\coloneq}            % defined as
\newcommand{\subtxt}[1]{_{\mathrm{#1}}} % upright subscript
\newcommand{\suptxt}[1]{^{\mathrm{#1}}} % upright superscript

% constants
\newcommand{\img}{i} % imaginary unit
\newcommand{\eul}{e} % Euler's number

\endinput
